<launch>
  <arg name="map_file" default="kitchen"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(find carmen_2dnav)/map/$(arg map_file).yaml"/>

  <include file="$(find carmen_2dnav)/launch/amcl.launch"/>
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find carmen_2dnav)/config/costmap_common.yml" command="load" ns="global_costmap"/>
    <rosparam file="$(find carmen_2dnav)/config/costmap_common.yml" command="load" ns="local_costmap"/>
    <rosparam file="$(find carmen_2dnav)/config/local_costmap.yml" command="load"/>
    <rosparam file="$(find carmen_2dnav)/config/global_costmap.yml" command="load"/>
    <rosparam file="$(find carmen_2dnav)/config/base_local_planner.yml" command="load"/>
    <remap from="/cmd_vel" to="/wheel_diff_drive_controller/cmd_vel" />
  </node>
</launch>
